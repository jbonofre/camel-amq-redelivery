    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="providerUrl" value="tcp://localhost:61616?jms.redeliveryPolicy.maximumRedeliveries=5&amp;jms.redeliveryPolicy.redeliveryDelay=84000"/>
